 @model IEnumerable<ARIBApp.Core.Contracts.DepartmentDTO>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Employees</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:40px;height:40px;">
                                <i class="bi bi-building"></i>
                            </div>
                            <div>
                                <div class="fw-bold">@department.Name</div>
                                <small class="text-muted">ID: @department.Id</small>
                            </div>
                        </div>
                    </td>
                    <td>@department.Employees.Count</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-sm btn-info" data-ajax="true" data-target="#main-content">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-sm btn-primary" data-ajax="true" data-target="#main-content">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button"
                                    class="btn btn-sm btn-danger department-delete-btn @(@department.Employees.Count > 0 ? "disabled" : "")"
                                    @(department.Employees.Count > 0 ? "disabled" : "")
                                    data-id="@department.Id"
                                    data-name="@Html.Raw(System.Web.HttpUtility.HtmlAttributeEncode(department.Name))">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>