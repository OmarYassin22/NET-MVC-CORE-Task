@page
@model IndexModel
@{
    ViewData["Title"] = "Employees";
}
<h2>Employees</h2>
<a asp-page="Create">Create New Employee</a>
<input type="text" id="searchBox" placeholder="Search employees..." />
<table id="employeesTable">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Full Name</th>
            <th>Salary</th>
            <th>Manager</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model.Employees)
    {
        <tr>
            <td>@emp.FirstName</td>
            <td>@emp.LastName</td>
            <td>@($"{emp.FirstName} {emp.LastName}")</td>
            <td>@emp.Salary</td>
            <td>@emp.ManagerName</td>
            <td>
                @if (!string.IsNullOrEmpty(emp.ImageUrl))
                {
                    <img src="@emp.ImageUrl" alt="Employee Image" width="50" />
                }
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@emp.Id">Edit</a> |
                <a asp-page="Delete" asp-route-id="@emp.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/employees.js"></script>
}
